<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Novo Camping</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Nome do Camping:</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Parece bom!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Localização</label>
        <small class="form-label text-muted"> | (Cidade, Estado)</small>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Parece bom!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Preço</label>
        <small class="form-label text-muted">
          | valor da diária ou por noite</small
        >
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            required
          />
        </div>
        <div class="valid-feedback">Parece bom!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Descrição</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Parece bom!</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Selecionar imagens...</span
            >
            <span class="form-file-button">Procurar</span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Criar Novo Camping</button>
      </div>
    </form>
    <a href="/campgrounds">Ver todos os Campings</a>
  </div>
</div>
